<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tairitsuLight</item>
        <item name="colorPrimaryDark">@color/tairitsuDark</item>
        <item name="colorAccent">@color/hikariLight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Ripple">
        <item name="android:radius">32dp</item>
        <item name="android:color">@color/tairitsuLight</item>
    </style>

</resources>
